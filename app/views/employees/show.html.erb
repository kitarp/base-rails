<div>
  <div>
    <h1>
      Employee #<%= @the_employee.id %> details
    </h1>

    <div>
      <div>
        <a href="/employees">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_employee/<%= @the_employee.id %>">
          Delete employee
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Supervisor
      </dt>
      <dd>
        <%= @the_employee.supervisor_id %>
      </dd>

      <dt>
        First name
      </dt>
      <dd>
        <%= @the_employee.first_name %>
      </dd>

      <dt>
        Last name
      </dt>
      <dd>
        <%= @the_employee.last_name %>
      </dd>

      <dt>
        Major
      </dt>
      <dd>
        <%= @the_employee.major %>
      </dd>

      <dt>
        Minor
      </dt>
      <dd>
        <%= @the_employee.minor %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_employee.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_employee.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit employee
    </h2>

    <form action="/modify_employee/<%= @the_employee.id %>"  method="post" >
      <div>
        <label for="supervisor_id_box">
          Supervisor
        </label>

        <input type="text" id="supervisor_id_box" name="query_supervisor_id" value="<%= @the_employee.supervisor_id %>">
      </div>

      <div>
        <label for="first_name_box">
          First name
        </label>

        <input type="text" id="first_name_box" name="query_first_name" value="<%= @the_employee.first_name %>">
      </div>

      <div>
        <label for="last_name_box">
          Last name
        </label>

        <input type="text" id="last_name_box" name="query_last_name" value="<%= @the_employee.last_name %>">
      </div>

      <div>
        <label for="major_box">
          Major
        </label>

        <input type="text" id="major_box" name="query_major" value="<%= @the_employee.major %>">
      </div>

      <div>
        <label for="minor_box">
          Minor
        </label>

        <input type="text" id="minor_box" name="query_minor" value="<%= @the_employee.minor %>">
      </div>

      <button>
        Update employee
      </button>
    </form>
  </div>
</div>

<hr>
