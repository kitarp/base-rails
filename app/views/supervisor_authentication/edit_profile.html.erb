<div >
  <h5>
    Edit Supervisor Account
  </h5>

  <div>
    <form  class="form-horizontal" action="/modify_supervisor" method="post">
      <div class="form-group">
        <label for="email_box" class="col-sm-2 control-label">Email</label>
        <input id="email_box" class="col-sm-10" name="query_email" value="<%= @current_supervisor.email %>">
      </div>
      <div class="form-group">
        <label for="first_name_box" class="col-sm-2 control-label">First name</label>
        <input id="first_name_box" class="col-sm-10" name="query_first_name" value="<%= @current_supervisor.first_name %>">
      </div>
      <div class="form-group">
        <label for="last_name_box" class="col-sm-2 control-label">Last name</label>
        <input id="last_name_box" class="col-sm-10" name="query_last_name" value="<%= @current_supervisor.last_name %>">
      </div>
      <div class="form-group">
        <label for="employees_count_box" class="col-sm-2 control-label">Employees count</label>
        <input id="employees_count_box" class="col-sm-10" name="query_employees_count" value="<%= @current_supervisor.employees_count %>">
      </div>

      <div class="form-group">
        <label for="password_box" class="col-sm-2 control-label">Password</label>
        <input id="password_box" class="col-sm-10" name="query_password" placeholder="Choose a password..." type="password">
      </div>
    
      <div class="form-group">
        <label for="password_confirmation_box" class="col-sm-2 control-label">Password Confirmation</label>
        <input id="password_confirmation_box" class="col-sm-10" name="query_password_confirmation" placeholder="Confirm your password..." type="password">
      </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-primary">Update Account</button>
    </div>
  </div>
    </form>
  </div>
</div>
